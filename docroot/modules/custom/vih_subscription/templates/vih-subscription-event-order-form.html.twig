{{ form.form_build_id }}
{{ form.form_token }}
{{ form.form_id }}

<section class="sectioned sectioned--content" {{ content_attributes.addClass('content') }}>
    <div class="sectioned__inner">
        <div class="container">
            <div id="status_messages"></div>
            <div class="sectioned__heading">
                <h2 class="sectioned__heading__title">
                    {{ "Sign up for @title"|t({ '@title': form['#event']['title'] }) }}
                </h2>
            </div>

            {# Introduction information START #}
            <div class="partial">
                <div class="partial__body">
                    <p>{{ form['#registration_text'] }}</p>

                    <a href="{{ form['#event']['url'] }}" class="btn btn-default">
                        {{ "Back to event" | trans }}
                    </a>
                </div>
            </div>
            {# Introduction information END #}
            <!-- Begin - participants -->
            <div class="partial partial--participants">
              <div class="partial__body">
                {{ form['addedParticipantsContainer'] }}
              </div>
            </div>
            <!-- End - participants -->
            <hr>

            <div class="row">
                <div class="col-xs-12 col-sm-6">
                  {# Participant container START #}
                  <div class="partial">
                    {{ form['newParticipantContainer'] }}
                  </div>

                  {# Options START #}
                  <div class="partial">
                    <div class="partial__body">
                      {{ form['availableOptionsContainer'] }}
                    </div>
                  </div>
                  {# Options END #}
                  {# Participant container END #}

                </div>

                <div class="col-xs-12 col-sm-6">

                    <!-- Begin - price -->
                    {% if not form['price'] %}
                      {% set priceVisibilityClass = 'hidden' %}
                    {% endif %}
                    <div class="boxy boxy--price {{ priceVisibilityClass }}">
                        <div class="boxy__heading">
                            <h4 class="boxy__heading__title">
                                {{ 'Total price' | trans }}
                            </h4>
                        </div>
                        <div class="boxy__body">
                            <div id="vih-event-price">
                                {{ form['price'] }}
                            </div>
                        </div>
                    </div>
                    <!-- End - price -->

                    <!-- Begin - form controls -->
                    <div class="partial partial--form-controls">
                      <div class="partial__body" id="button">
                        {{ form['extra_actions'] }}
                      </div>
                    </div>
                    <!-- End - form controls -->
                </div>
            </div>
            <div id="form-bottom-wrapper"{% if  form['#addedParticipants'] %} class="hidden"{% endif %}>
                <hr>
                <div class="terms_and_conditions">
                  {{ form['terms_and_conditions'] }}
                </div>
                <!-- Begin - form controls -->
                <div class="partial partial--form-controls">
                    <div class="partial__body">
                        {{ form['actions'] }}
                    </div>
                </div>
                <!-- End - form controls -->
            </div>
        </div>
    </div>
</section>
