{% set classes = [
node.bundle|clean_class,
node.isPromoted() ? 'is-promoted',
node.isSticky() ? 'is-sticky',
not node.isPublished() ? 'is-unpublished',
view_mode ? view_mode|clean_class,
'clearfix',
] %}
<article{{ attributes.addClass(classes) }}>

    <!-- Begin - content -->
    <section class="sectioned sectioned--content">
        <div class="sectioned__inner">
            <div class="container">
                <h1>{{ content.field_vies_first_name.0 }} {{ content.field_vies_last_name.0 }}</h1>
                <div class="row">
                    <div class="col-xs-12 col-sm-7">
                       {{ content.group_col_left }}
                    </div>
                    <div class="col-xs-12 col-sm-5">
                        {% if content.field_vies_label.0 or content.field_vies_status.0 %}
                        <div class="boxy">
                            <div class="boxy__body">
                                {{ content.field_vies_label }}
                                {{ content.field_vies_status }}
                            </div>
                        </div>
                        {% endif %}
                        {{ content.group_col_right }}
                    </div>
                </div>
              <a href="{{ path('vies_application.application_mail_resend', {'order': node.id}) }}" class="btn-success btn btn-xs">{{ 'Resend Email' | trans }}</a>  
        </div>
    </section>
    <!-- End - content -->

</article>